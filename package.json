{
  "name": "api-server",
  "version": "0.1",
  "description": "API server for ecommerce project",
  "main": "src/index.ts",
  "repository": "git@github.com:Petka17/turing-api-server.git",
  "author": "Petr Klimenko <petrklim@yandex.ru>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "mig:gen": "ts-node ./node_modules/.bin/typeorm migration:generate",
    "mig:run": "ts-node ./node_modules/.bin/typeorm migration:run",
    "doc:api": "yarn swaggerGen -c ./swaggerConfig.json -p ./tsconfig.json ",
    "start:dev": "ts-node src/index.ts",
    "build": "tsc",
    "start": "node build/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "dependencies": {
    "express": "^4.17.1",
    "mysql": "^2.17.1",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.0.5",
    "typeorm": "^0.2.17",
    "typescript-rest": "^2.0.1",
    "typescript-rest-swagger": "^0.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/supertest": "^2.0.7",
    "@types/swagger-ui-express": "^3.0.0",
    "@types/tcp-port-used": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "supertest": "^4.0.2",
    "tcp-port-used": "^1.0.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "typescript": "^3.4.5"
  }
}
